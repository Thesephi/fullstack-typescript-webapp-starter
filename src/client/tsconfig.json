{
  "compilerOptions": {
    "outDir": "../../build/public/",
    "baseUrl": ".",
    "paths": {
      "shared/*": ["../shared/*"],
      "client/*": ["../client/*"],
    },
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "strict": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ]
  }
}